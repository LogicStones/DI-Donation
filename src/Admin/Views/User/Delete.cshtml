@model RegisterViewModel

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Delete Company" : "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
            <div class="card card-body">
                <h4 class="text-danger card-title">Are you sure you want to delete this?</h4>
                <div class="row">
                    <div class="col-sm-6 col-xs-12">
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" readonly class="form-control" />
                        </div>
                    </div>
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="row">
                        <div class="col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label asp-for="CompanyName"></label>
                                <input asp-for="CompanyName" readonly class="form-control" />
                            </div>
                        </div>
                        <div class="col-sm-6 col-xs-12">
                            <div class="form-group">
                                <img src="@Model.CompanyLogoUrl" height="150" class="rounded-circle" />
                            </div>
                        </div>
                    </div>
                }
                <div class="row">
                    <div class="col-sm-12 col-xs-12">
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="form-group">
                                <h4 class="text-danger card-title">By deleting company any associated users and surveys data will be deleted. You can't undo this action.</h4>
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <h4 class="text-danger card-title">By deleting user any associated surveys data will be deleted. You can't undo this action.</h4>
                            </div>
                        }
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="UserId" />
                            <button type="submit" class="btn btn-danger" style="float: right;"><i class="fa fa-trash m-r-5"></i> Delete</button>
                            <a asp-action="Index" type="button" class="btn btn-info m-r-5" style="float: right !important;"><i class="fa fa-arrow-circle-left m-r-5"></i> Back</a>
                        </form>
                    </div>
                </div>
            </div>
		</div>
	</div>
</div>