@model List<CategoryListViewModel>
@{
    ViewData["Title"] = "Donation Sub Categories";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4 class="card-title">Sub Categroies</h4>
                            <h6 class="card-subtitle">Donation Sub Categories</h6>
                        </div>
                    </div>
                    <div class="table-responsive m-t-40">
                        <table id="myTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Sub Category</th>
                                    <th>Type</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td><h6>@category.Name</h6></td>
                                        <td><h6>@category.SubCategoryName</h6></td>
                                        <td><h6>@category.Type</h6></td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="DeleteSubCategory" asp-route-id="@category.SubCategoryId" type="button" class="btn btn-danger">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>