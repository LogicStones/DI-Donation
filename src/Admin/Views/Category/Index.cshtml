@model List<CategoryListViewModel>
@{
    ViewData["Title"] = "Donation Categories";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="card-title">Categroies</h4>
                            <h6 class="card-subtitle">Donation Type Categories</h6>
                        </div>
                        <div class="col-md-6 pull-right">
                            <a asp-action="Create" type="button" class="btn btn-success btn-rounded color1" style="float: right !important;"><i class="fa fa-plus-circle m-r-5"></i> Add New Category</a>
                        </div>
                    </div>
                    <div class="table-responsive m-t-40">
                        <table id="myTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    @*<th>Status</th>*@
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td><h6>@category.Name</h6></td>
                                        <td><h6>@category.Type</h6></td>
                                        @*<td><h6>@category.Status</h6></td>*@
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Create" asp-route-id="@category.CategoryId" type="button" class="btn btn-success color1">
                                                    <i class="fa fa-edit"></i>
                                                </a>&nbsp;&nbsp;
                                                <a asp-action="Delete" asp-route-id="@category.CategoryId" type="button" class="btn btn-danger">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>